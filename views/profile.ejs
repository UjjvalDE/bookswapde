    <style>
        :root {
            --primary: #EED47E;
            --secondary: #2C3E50;
            --accent: #34495E;
            --light: #F8F9FA;
            --dark: #1A1A1A;
            --white: #FFFFFF;
            --text: #2C3E50;
            --gradient: linear-gradient(135deg, #EED47E, #F4E5A3);
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .profile-container {
            min-height: 100vh;
            padding: 4rem 2rem;
            background: var(--light);
        }

        .profile-wrapper {
            max-width: 1200px;
            margin: 0 auto;
        }

        .profile-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .profile-header h1 {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--secondary);
            margin-bottom: 0.5rem;
            background: linear-gradient(45deg, var(--secondary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .profile-header p {
            color: var(--accent);
            font-size: 1.1rem;
            opacity: 0.8;
        }

        .profile-content {
            background: var(--white);
            border-radius: 30px;
            padding: 3rem;
            box-shadow: var(--card-shadow);
        }

        .profile-grid {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 3rem;
            margin-bottom: 2rem;
        }

        .profile-image-section {
            text-align: center;
        }

        .profile-image-wrapper {
            position: relative;
            width: 220px;
            height: 220px;
            margin: 0 auto 1rem;
            border-radius: 50%;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }

        .profile-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .profile-image-wrapper:hover {
            transform: translateY(-5px);
        }

        .profile-image-wrapper:hover img {
            transform: scale(1.1);
        }

        .profile-image-caption {
            color: var(--accent);
            font-size: 0.9rem;
            opacity: 0.8;
            margin-bottom: 1rem;
        }

        .cartoon-options {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
            margin-top: 1rem;
        }

        .cartoon-option {
            display: flex;
            flex-direction: column;
            align-items: center;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            padding: 0.5rem;
            border-radius: 10px;
        }

        .cartoon-option:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .cartoon-option.selected {
            background: var(--light);
            border: 2px solid var(--primary);
        }

        .cartoon-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 0.5rem;
            transition: transform 0.3s ease;
        }

        .cartoon-option:hover .cartoon-image {
            transform: scale(1.1);
        }

        .cartoon-option span {
            font-size: 0.85rem;
            color: var(--secondary);
            text-align: center;
        }

        .profile-section {
            margin-bottom: 2.5rem;
        }

        .profile-section h2 {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--secondary);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .profile-section h2::before {
            content: '';
            width: 4px;
            height: 24px;
            background: var(--primary);
            border-radius: 2px;
        }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: var(--light);
            border-radius: 12px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .detail-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .detail-item i {
            color: var(--primary);
            font-size: 1.25rem;
        }

        .detail-content {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .detail-label {
            font-size: 0.875rem;
            color: var(--accent);
            opacity: 0.8;
        }

        .detail-value {
            font-size: 1rem;
            color: var(--secondary);
            font-weight: 500;
        }

        .interests-wrapper {
            background: var(--light);
            border-radius: 12px;
            padding: 1.5rem;
        }

        .interests-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .interest-tag {
            background: var(--white);
            color: var(--secondary);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }

        .interest-tag:hover {
            transform: translateY(-2px);
        }

        .profile-view .interest-tag {
            opacity: 0.8;
            cursor: default;
        }

        .profile-view .interest-tag:hover {
            transform: none;
            box-shadow: var(--shadow);
        }

        .profile-actions {
            text-align: center;
            margin-top: 2rem;
        }

        .btn-primary {
            background: var(--primary);
            border: none;
            color: var(--secondary);
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(238, 212, 126, 0.3);
            text-decoration: none;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(238, 212, 126, 0.4);
            background: var(--gradient);
        }

        .btn-primary i {
            transition: transform 0.3s ease;
        }

        .btn-primary:hover i {
            transform: translateX(5px);
        }

        .alert-danger {
            background-color: #fff5f5;
            border: 1px solid #feb2b2;
            color: #c53030;
            padding: 1rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
        }

        @media (max-width: 991px) {
            .profile-grid {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .profile-image-wrapper {
                width: 180px;
                height: 180px;
            }

            .details-grid {
                grid-template-columns: 1fr;
            }

            .cartoon-options {
                gap: 0.75rem;
            }

            .cartoon-image {
                width: 50px;
                height: 50px;
            }
        }

        @media (max-width: 768px) {
            .profile-container {
                padding: 2rem 1rem;
            }

            .profile-content {
                padding: 2rem;
            }

            .profile-header h1 {
                font-size: 2rem;
            }

            .profile-header p {
                font-size: 1rem;
            }

            .profile-image-wrapper {
                width: 150px;
                height: 150px;
            }

            .cartoon-image {
                width: 40px;
                height: 40px;
            }

            .cartoon-option span {
                font-size: 0.75rem;
            }
        }
    </style>

